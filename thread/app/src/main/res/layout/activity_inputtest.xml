<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <EditText
        android:id="@+id/mSoftInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="弹出软键盘"
        android:imeOptions="actionSearch"/>


    <com.hy.base.androidbase.inputevent.MyLayoutFirst
        android:id="@+id/layout_first"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CDB5CD">

        <com.hy.base.androidbase.inputevent.MyLayoutSecond
            android:id="@+id/layout_second"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="#A4D3EE">

            <com.hy.base.androidbase.inputevent.MyView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                >
            </com.hy.base.androidbase.inputevent.MyView>


            <Button
                android:id="@+id/mbt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:text="bt"
                />

        </com.hy.base.androidbase.inputevent.MyLayoutSecond>
    </com.hy.base.androidbase.inputevent.MyLayoutFirst>

</LinearLayout>